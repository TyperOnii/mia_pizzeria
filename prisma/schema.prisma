generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int   @id @default(autoincrement())
  title       String
  weight      Int
  details     ProductDetails?
  ingredients String[]
  quantity    Int
  price       Int
  description String?
  discount    Int?

  orders ProductOnOrder[]
}

model ProductDetails {
  id       Int    @id @default(autoincrement())
  calories Int
  proteins Int
  fats     Int
  carbs    Int

  productId Int    @unique
  product  Product @relation(fields: [productId], references: [id])
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  phone_number String   @unique
  address      Address?
  orders       Order[]
}

model Address {
  id          Int     @id @default(autoincrement())
  city        String
  street      String
  house_number String
  apartment String?

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Order {
  id           Int    @id @default(autoincrement())
  status       OrderStatus
  total_amount Int

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  products ProductOnOrder[]
}
enum OrderStatus {
  confirmed
  cooking
  ready
  canceled
}
//
// M:N связь Order <-> Product
//
model ProductOnOrder {
  id        Int @id @default(autoincrement())

  orderId   Int @unique
  productId Int @unique

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}
